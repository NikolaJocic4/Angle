<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".profile">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Fixed Position View at the Top -->
            <RelativeLayout
                android:id="@+id/topFixedLayout"
                android:layout_width="match_parent"
                android:layout_height="91dp">

                <!-- Contents of the fixed view at the top -->
                <!-- Navbar Header -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="91dp">
                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="45dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="25dp"
                        android:background="@drawable/angle_image" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:layout_marginTop="90dp"
                        android:background="#000000" />
                </RelativeLayout>

            </RelativeLayout>

            <!-- Profile Icon -->
            <ImageView
                android:layout_width="86dp"
                android:layout_height="86dp"
                android:layout_marginLeft="295dp"
                android:layout_marginTop="130dp"
                android:background="@drawable/profile_icon" />

            <!-- Username -->
            <TextView
                android:layout_width="189dp"
                android:layout_height="45dp"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="148dp"
                android:text="Username"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- ExampleName44 -->
            <TextView
                android:id="@+id/example_user"
                android:layout_width="187dp"
                android:layout_height="25dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="168dp"
                android:text="ExampleName44"
                android:textColor="#000000"
                android:textSize="20sp" />

            <!-- Email -->
            <TextView
                android:layout_width="305dp"
                android:layout_height="45dp"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="234dp"
                android:text="Email"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- example@email.com -->
            <TextView
                android:id="@+id/example_email"
                android:layout_width="303dp"
                android:layout_height="25dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="254dp"
                android:text="example@email.com"
                android:textColor="#000000"
                android:textSize="20sp" />

            <!-- Line 5 -->
            <View
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_marginTop="331dp"
                android:background="#000000" />

            <!-- Line 6 -->
            <View
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_marginTop="417dp"
                android:background="#000000" />

            <!-- Line 6 -->
            <View
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_marginTop="503dp"
                android:background="#000000" />

            <!-- Starred headlines -->
            <TextView
                android:id="@+id/starred_headlines"
                android:layout_width="196dp"
                android:layout_height="29dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="360dp"
                android:text="Starred headlines"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Starred headlines -->
            <TextView
                android:id="@+id/about_us"
                android:layout_width="196dp"
                android:layout_height="29dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="446dp"
                android:text="About Us"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- © All Rights Reserved -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="620dp"
                android:text="© All Rights Reserved"
                android:textColor="#000000"
                android:textSize="10sp"
                android:textStyle="bold" />

            <!-- Edit Profile Button -->
            <Button
                android:id="@+id/edit_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="550dp"
                android:text="Edit Profile"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:backgroundTint="#000000"
                android:gravity="center"
                android:textStyle="bold" />

            <!-- Fixed Position View at the Bottom -->
            <RelativeLayout
                android:id="@+id/bottomFixedLayout"
                android:layout_width="match_parent"
                android:layout_height="71dp"
                android:layout_alignParentBottom="true">

                <!-- Contents of the fixed view at the bottom -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="71dp">
                    <ImageView
                        android:id="@+id/profile"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="320dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/profile_icon" />

                    <ImageView
                        android:id="@+id/news"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="43dp"
                        android:layout_marginTop="17dp"
                        android:background="@drawable/news_image" />

                    <ImageView
                        android:id="@+id/post"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="184dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/post_image" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:layout_marginTop="0dp"
                        android:background="#000000" />
                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>
