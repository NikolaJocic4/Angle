<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".aboutus">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Fixed Position View at the Top -->
        <RelativeLayout
            android:id="@+id/topFixedLayout"
            android:layout_width="match_parent"
            android:layout_height="91dp">

            <!-- Contents of the fixed view at the top -->
            <!-- Navbar Header -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="91dp">
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="45dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/angle_image" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:layout_marginTop="90dp"
                    android:background="#000000" />
            </RelativeLayout>

        </RelativeLayout>

        <ImageView
            android:id="@+id/about_us"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="125dp"
            android:background="@drawable/about_us" />
        <TextView
            android:id="@+id/block1"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="200dp"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Fusce auctor ex at consequat pharetra. Aenean in mollis lacus. Sed fermentum mauris sed nulla laoreet tincidunt. Phasellus sed malesuada odio, at blandit orci. Vestibulum eu magna in sapien fermentum viverra. Maecenas arcu tellus, consectetur in diam eu, sagittis rhoncus nunc. Ut sed elementum dolor, nec dignissim nunc. Aenean in ultricies nunc, sed sollicitudin sem."
            android:textColor="#000000"
            android:textSize="15sp"
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal"
            android:gravity="center" />
        <TextView
            android:layout_below="@id/block1"
            android:id="@+id/block2"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Maecenas tincidunt non odio vel consequat. Phasellus ut nulla metus. Aenean id augue quis metus placerat blandit sit amet laoreet neque. Integer vulputate tortor in volutpat dapibus. Cras nec dolor auctor, sodales lectus nec, dapibus leo. Nam ut nulla in massa varius tempus mollis non magna. Mauris et dictum urna."
            android:textColor="#000000"
            android:textSize="15sp"
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal"
            android:gravity="center" />
        <TextView
            android:layout_below="@id/block2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="4dp"
            android:text="Â© All Rights Reserved"
            android:textColor="#000000"
            android:layout_marginTop="50dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center" />

        <!-- Fixed Position View at the Bottom -->
        <RelativeLayout
            android:id="@+id/bottomFixedLayout"
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:layout_alignParentBottom="true">

            <!-- Contents of the fixed view at the bottom -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="71dp">
                <ImageView
                    android:id="@+id/profile"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="320dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/profile_icon" />

                <ImageView
                    android:id="@+id/news"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="43dp"
                    android:layout_marginTop="17dp"
                    android:background="@drawable/news_image" />

                <ImageView
                    android:id="@+id/post"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="184dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/post_image" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:layout_marginTop="0dp"
                    android:background="#000000" />
            </RelativeLayout>

        </RelativeLayout>

</RelativeLayout>
</RelativeLayout>